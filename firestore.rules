rules_version = '2'; 
service cloud.firestore { 
  match /databases/{database}/documents { 

    function isAdmin() { 
      return request.auth != null && request.auth.token.role == 'admin';
    } 

    match /{document=**} { 
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin();
    } 

  } 
} 




